{
  "name": "python-app",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/python-app",
        "command": "python -m compileall ."
      }
    },
    "run": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/python-app",
        "command": "python main.py"
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t python-app:latest -f apps/python-app/Dockerfile ."
      }
    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run -d -p 8080:8080 python-app:latest"
      }
    }
  }
}
